extends layouts/_layout.pug

block variables
	- var activePage = 'page-order-management-edit'

block title
	if order
		title Modifier une commande - Tumeplay
	else
		title Cr√©er une commande - Tumeplay

block content
	.app-title
		div
			h1
				i.fa.fa-book
				|  Gestion de commande (Reference no: #{order ? order.id : "_"})
			p Visualisation des details de la commande

		ul.app-breadcrumb.breadcrumb.side
			li.breadcrumb-item
				i.fa.fa-home.fa-lg
			li.breadcrumb-item.active
				a(href="#") order

	.row
		.col-md-12
			include ./forms/user-orders/_form.pug
